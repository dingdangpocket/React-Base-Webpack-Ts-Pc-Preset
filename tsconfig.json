{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
          },
    },
    "include": [
        "./src/**/*"
    ]
}